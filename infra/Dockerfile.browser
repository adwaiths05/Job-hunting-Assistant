# Use the official Playwright image which includes browsers and dependencies
FROM mcr.microsoft.com/playwright:v1.40.0-jammy

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies including Express
RUN npm install && npm install express cors

# Copy source code
COPY . .

# Expose the port
EXPOSE 3001

# Start the server
CMD ["node", "index.js"]